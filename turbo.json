{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env", ".env"],
	"globalEnv": ["*"],
	"tasks": {
		"build": {
			"inputs": ["**/*.ts", "**/*.tsx", "!src-tauri/**", "!node_modules/**"],
			"dependsOn": ["^build"],
			"outputs": [".output/**", "public/**", "dist/**"]
		},
		"lint": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"inputs": ["**/*.ts", "**/*.tsx", "!node_modules/**"],
			"cache": false
		}
	}
}
