{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"skipLibCheck": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.stories.tsx", "**/*.stories.ts", "dist"]
}
